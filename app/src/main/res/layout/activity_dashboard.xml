<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard"
    tools:ignore="HardcodedText">
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDataTable"
        android:layout_width="match_parent"
        android:layout_height="500dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSelectZipFile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Import Images"
        android:layout_marginHorizontal="50dp"

        app:layout_constraintBottom_toTopOf="@+id/btnExportCsv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnExportCsv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Export CSV"
        android:layout_marginHorizontal="50dp"

        app:layout_constraintBottom_toTopOf="@+id/btnImportCsv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnImportCsv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Upload CSV"
        android:layout_marginHorizontal="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>