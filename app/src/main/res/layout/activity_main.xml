<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/btnExportCsv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Export Csv"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnExportImages"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/btnExportImages"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Export Images"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDataTable"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/btnDataTable"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="View Data"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnUploadCSV"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/btnUploadCSV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Upload Csv"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnUploadImages"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/btnUploadImages"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Upload Images"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>